<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="databaseModel"
            type="com.example.viewmodel.ui.viewModels.DatabaseViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/word_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@={databaseModel.liveText}"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/word_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/word_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:onClick="@{() -> databaseModel.insertWord()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/word_input"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/live_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{databaseModel.liveText}"
            app:layout_constraintTop_toBottomOf="@+id/word_input"
            app:layout_constraintBottom_toTopOf="@+id/words_text"/>

        <TextView
            android:id="@+id/words_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{databaseModel.text}"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/live_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>